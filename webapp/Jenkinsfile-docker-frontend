pipeline {
    agent {
      label 'akhil'
    }

    environment {

    DOCKERHUB_CREDENTIALS = credentials('docker-hub')
     registry = "yellaiahdocker/frontend-latest"
        registryCredential = 'docker-hub'
        dockerImage = ''
    }

    stages {
        

        stage('Building the docker image') {
            steps {
                sh 'cd webapp && docker build -t yellaiahdocker/frontend-latest .'
            }
        }
        stage('Logging into dockerhub account') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        stage('pushing the docker image into dockerhub') {
            steps {
                  sh 'docker push yellaiahdocker/frontend-latest'
            }
        }
        stage('Remove old docker images') {
             steps {
                 sh 'docker rmi -f yellaiahdocker/frontend-latest'
            }
        }
         stage('Running the docker container') {
            steps {
                  sh 'docker container rm --force fe'
                  sh 'docker run -dt -p 8000:80 --name fe yellaiahdocker/frontend-latest'
            }
        }
    }
}

