pipeline {
    agent any

    stages {
        stage('Building the code') {
            steps {
                echo 'Building..'
                sh 'cd webapp && npm install'
                sh 'cd webapp && npm run build'

            }
        }

        stage('Deploying the code into nginx server') {
            steps {
                echo 'Deploying....'
                  sh 'cd webapp && sudo cp -r webapp/dist/*  /var/www/html'
            }
        }
    }
}
